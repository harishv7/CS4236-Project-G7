<body>
    <script>
        $(document).ready(function() {
            $(function() {
                let b = baffle('.baffleme').start();
                b.reveal(2000);

                particlesJS.load('particles', '/javascripts/particles.json', function() {
                    console.log('callback - particles.js config loaded');
                });

                $("#accordion").accordion({
                    collapsible: true,
                    active: false,
                    heightStyle: "content"
                });
            });

            /* Socket IO */
            const socket = io('http://localhost:3000');
            socket.on('connection', function(client) {});

            socket.emit('init');

            socket.on('init', (transactionQueue) => {
                console.log("initialising");
                for (transaction in transactionQueue) {
                    document.body.innerHTML += '<div>' + JSON.stringify(transaction) + '</div>';
                }
            });

            socket.on('clock', (time) => {
                console.log("Received clock: " + parseInt(time));
                document.getElementById("clock").innerHTML = parseInt(time);
            });

            /* Put in Queue */
            socket.on('newTransaction', (transaction) => {
                console.log("New transaction received.");
                document.getElementById("incomingTransactions").innerHTML += '<div>' + JSON.stringify(transaction) + '</div>';
            });
        });
    </script>
