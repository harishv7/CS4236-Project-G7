          "transaction_id": 5,
          "player_id": playerId,
          "game_id": gameId,
          "secret": secret,
          "guess": guess,
          "r_one": rOne,
          "r_two": rTwo
        }, function () {
          // onSuccess callback
          swal({
            title: "You've revealed your secret",
            type: "success",
            html: `Let's take a look at the results!`,
            confirmButtonColor: "#87CEFF",
            confirmButtonText: "See Results",
          }).then(function (result) {
            if (result.value) {
              window.location.href="/#logs";
            }
          });
        });
      });
    });
  });
